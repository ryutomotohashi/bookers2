<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3 class="text-danger"><%= @user.errors.count %>
        errors prohibited this obj from being saved:
      </h3>
        <ul class="text-danger">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user,url: user_path(@user.id), method: :put, local: true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label><br />
            <%= f.text_field :name , class: "w-100"%>
        </div>
        <div class="from-group">
          <label for="user_image">Image</label><br />
            <%= f.file_field :profile_image , class: "w-100"%>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label><br />
            <%= f.text_area :introduction , class: "w-100"%>
        </div>
        <div class="form-group">
        <%= f.submit "Update User" , class: "btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
