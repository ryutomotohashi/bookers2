<main>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>

        <tr><%= %></tr>
        <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
        </tr>
      </table>

    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image("40x40") %></td>
            <td><%= book.title %></td>
            <td><%= link_to "show",user_path(book) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>