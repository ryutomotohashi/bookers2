
<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render "index", {user: @book.user, book: @book_new}%>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= image_tag @book.user.get_profile_image("40x40") %><br />
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-succes"%></td>
              <td><%= link_to "Destroy", books_path, method: :delete, class: "btn btn-succes","data-confirm" => "本当に削除しますか?" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
