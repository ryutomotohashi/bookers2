
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User Info</h2>
        <%=  %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>name</tr>
            <tr></tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to do %>
            編集
          <% end %>
        </div>

        <h2 class="mt-3">New Book</h2>
        <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br />
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
            <%= f.submit "Creat Book" %>
        </div>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td></td>
              <td>
                <%= link_to do %>
                  <%= @book.title %>
                <% end %>
                </td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-succes"%></td>
              <td><%= link_to "Destroy", books_path, method: :delete, class: "btn btn-succes","data-confirm" => "本当に削除しますか?" %></td>
            </tr>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</main>
