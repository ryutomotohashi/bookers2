<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User Info</h2>
        <%=  %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>name</tr>
            <tr></tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to do %>
            編集
          <% end %>
        </div>

        <h2 class="mt-3">New Book</h2>
        <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br />
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
            <%= f.submit "Creat Book" %>
        </div>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td></td>
              <td>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <td>show</td>
            </tr>
          <% end %>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</main>
