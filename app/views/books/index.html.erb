
 <div class="container px-5 px-sm-0">
    <% if @book_new.errors.any? %>
    <h3 class="text-danger"><%= @book_new.errors.count %>
      errors prohibited this obj from being saved:
    </h3>
    <ul class="text-danger">
      <% @book_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="row">
      <div class="col-md-3">
        <h2>User Info</h2>
        <%= image_tag current_user.get_profile_image("70x70") %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>                <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-users"></i>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book_new, local: true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br />
          <%= f.text_field :title , class: "w-100"%>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body , class: "w-100"%>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
        <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
           <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image("40x40") %>                  <% end %>
              </td>
               <td>
                <%= link_to book_path(book) do %>
                <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
