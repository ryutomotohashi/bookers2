<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
        <h3 class="text-danger"><%= @book.errors.count %>
          errors prohibited this obj from being saved:
        </h3>
        <ul class="text-danger">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
        <%= form_with model: @book,method: :put, local: true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br />
          <%= f.text_field :title , class: "w-100"%>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br />
          <%= f.text_area :body , class: "w-100"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book" , class: "btn btn-secondary"%>
        </div>
          <%= link_to "Show",book_path(@book) %>
          |
          <%= link_to "Back", "/books" %>
        <% end %>
      </div>
    </div>
  </div>
</main>
<%= render "books/footer" %>
